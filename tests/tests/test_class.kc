@import	"test_class.kh"

int		main(void)
{
  StackInt	*my_stack;

  my_stack = [StackInt new :4242];
  [my_stack push :10];
  [StackInt push :my_stack :11];//appel compatible module
  [my_stack push :12];
  [my_stack push :13];
  [my_stack push :14];
  [my_stack delete];
}

@implementation StackInt
{
  @member void	init(int size)
    {
      int		*buf;

      [self.nbitem] = 0;
      [self.size] = size;
      buf = (int *) calloc(size, sizeof(int));
      [self.data] = buf;
    }

  @member
    {
      int	nbitem()
      {
	int	n;

	n = [self.nbitem];
	return (n);
      }

      void	push(int i)
      {
	int pos;
	int *buf;

	pos = [self.nbitem];
	buf = [self.data];
	buf[pos++] = i;
	[self.nbitem] = pos;
      }
    }

  int	pop(StackInt *self)
  {
    int	*buf;
    int	pos;
     int	r;

    pos = [self.nbitem];
    buf = [self.data];
    r = buf[pos--];
    [self.nbitem] = pos;
    return (r);
  }

  void	clean(StackInt *this)
  {
    int	*buf;

    buf = [this.data];
    free(buf);
  }
}// fin @class
