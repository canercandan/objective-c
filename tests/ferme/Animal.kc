@import "Animal.kh"

@implementation Animal
{
  @member void init(int age, int poid, int faim)
    {
      [self.age] = age;
      [self.poid] = poid;
      [self.faim] = faim;
    }
  @member void	init()
    {
      [self.age] = 1;
      [self.poid] = 5;
      [self.faim] = 1;
    }
  @virtual @member void	crier()
    {
      printf("Je suis fouu..!\n");
    }
}

@implementation Singe
{
  @member void	init(int age, int poid, int faim)
    {
      [super init];
    }
  @virtual @member void	crier()
    {
      printf("Je suis un singe hihihihanhi !\n");
    }
}

@implementation Cochon
{
  @member void	init(int age, int poid, int faim)
    {
      [self.age] = age;
      [self.poid] = poid;
      [self.faim] = faim;
    }
  @virtual @member void	crier()
    {
      printf("Je suis un cochon rRonRonRron !");
    }
}

@implementation Nourriture
{
  @member void init(int qte)
    {
      [self.qte] = qte;
    }
  @member void	approvisionner(int val)
    {
      [self.qte] += val;
      printf("Le stock a ete approvisionne de %d unitees.\n", val);
    }
  @member void	servirNourriture(int val)
    {
      if ([self.qte] - val < 0)
	{
	  printf("La ferme fait faillite.\n");
	  return (0);
	}
      [self.qte] -= val;
      printf("Le stock se vide de %d unitees\n", val);
    }
}

int	main()
{
  Nourriture stock;
  [&stock init :100];
  Animal *ferme[100];

  ferme[0] = [Animal new];
  ferme[1] = [Cochon new :2 :15 :3];
  ferme[2] = [Singe new :2 :15 :3];
  return (0);
}
